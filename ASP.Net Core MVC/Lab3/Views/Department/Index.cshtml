@model IEnumerable<Department>
@{
    ViewBag.Title = "Departments Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Index</title>
</head>
<body>
    <a href="/Department/Add" class="btn btn-success">Add</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Manager Name</th>
                <th scope="col">Details</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
                <th scope="col">Update Courses</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null)
            {
                <tr>
                    <th scope="row" colspan="4">No Data</th>
                </tr>
            }
            else
            {
                int i = 0;
                foreach (var dept in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@dept.Id</td>
                        <td>@dept.Name</td>
                        <td>@dept.ManagerName</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@dept.Id" class="btn btn-primary">Details</a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@dept.Id" class="btn btn-info">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-danger">Delete</a>
                        </td>
                        <td>
                            <a asp-action="UpdateCourses" asp-route-id="@dept.Id" class="btn btn-warning">Update Courses</a>
                        </td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</body>
</html>
