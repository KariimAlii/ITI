
@{
    ViewData["Title"] = "UpdateCourses";
}

<h1>UpdateCourses</h1>
<form method="post">
    <input name="id" value="@ViewBag.deptId" type="hidden"/>
    <div>
        <h2 class="alert alert-info">Courses in Department</h2>
        <select name="coursesToRemove" asp-items="ViewBag.coursesInDept" multiple></select>
    </div>

    <div>
        <h2 class="alert alert-danger">Courses Not In Department</h2>
        <select name="coursesToAdd" asp-items="ViewBag.coursesNotInDept" multiple></select>
    </div>

    <input type="submit" value="submit" class="btn btn-success"/>
</form>

